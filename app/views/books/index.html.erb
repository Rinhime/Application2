<sidebar>
  <h1>New book</h1>
    <%= form_with model: @book_new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
<main>
  <h1>投稿一覧</h1>
　<% @books.each do |book| %>
  <div>
    <p>本のタイトル：<%= book.title %></p>
    <p>説明：<%= book.body %></p>
  </div>
<% end %>
</main>