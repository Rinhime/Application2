<div class="container">
  <div class="row my-5">
　　<% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="col-2">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book_new: @book_new %>
    </div>
    
    <div class="col-8 offset-4">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
　        <% @books.each do |book| %>
          <tr>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
            <%= link_to book_path(book.id) do %>
            <th><%= book.title %></th>
            <% end %>
            <th><%= book.body %></th>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>    
  </div>
</div>