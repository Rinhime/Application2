<div class="new-book">
  
    <h2 class="mt-3">New book</h2>
      <%= form_with model: book_new do |f| %>
        <p>Title</p>
        <%= f.text_field :title, :size=>"30" %>
        
        <p>Opinion</p>
        <%= f.text_area :body, :size=>"32" %>
        <input class="btn btn-success" type="submit" value="Create Book">
      <% end %>
    
</div>