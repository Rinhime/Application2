<h1>Book detail</h1>
<div>
  <h1>User info</h1>
  <%= image_tag @user.get_image(100,100) %>
  <h5>name</h5>
  <h3><%= @user.name %></h3>
  <h5>introduction</h5>
  <%= link_to "edit", edit_user_path(current_user) %>
</div>
<sidebar>
  <h1>New book</h1>
    <%= form_with model: @book_new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</sidebar>
<div>
  <p><%= image_tag book.user.get_image(100,100) %></p>
  <h3><%= @book.title %></h3>
  <h5><%= @book.body %></h5>
  <%= link_to "Edit", edit_user_path %>
  
</div>
