<h1>Book detail</h1>
<sidebar>
  <h1>New book</h1>
    <%= form_with model: @book_new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</sidebar>
<div>
  <h3><%= @book.title %></h3>
  <h5><%= @book.body %></h5>
  <%= link_to "Edit", edit_user_path %>
  
</div>
