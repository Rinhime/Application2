<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>

<div>
  <h1>User info</h1>
  <%= image_tag @user.get_image(100,100) %>
  <h5>name</h5>
  <h3><%= @user.name %></h3>
  <h5>introduction</h5>
  <%= link_to "edit", edit_user_path %>
</div>

<sidebar>
  <h1>New book</h1>
    <%= form_with model: @book_new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</sidebar>
<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= image_tag @user.get_image(100,100) %>
    <%= link_to book_path do %>
      <p><%= book.title %></p>
    <% end %>
    <p><%= book.body%></p>
  </div>
<% end %>