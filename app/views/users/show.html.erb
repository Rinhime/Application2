<div class="container">
  <div class="row my-5">
    <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <div class="col mx-4">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book_new: @book_new %>
    </div>
      <div class="col-8">
        <h3>Books</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
             <% @books.each do |book| %>
             <tr>
               <th><%= image_tag @user.get_profile_image(100,100) %></th>
               <th><%= link_to book_path(book.id) do %></th>
               <th><%= book.title %></th>
               <% end %>
               <th><%= book.body%></th>
             </tr>
          </tbody>  
        <% end %>    
        </table>
      </div>
  　
  </div>　
</div>