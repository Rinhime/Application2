
<div class="container px-5 px-sm-0">
  <% if @user.errors.any? %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book_new: @book_new %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
            <th>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </th>
            <th><%= book.body%></th>
          </tr>
          <% end %>
        </tbody>  
      </table>
    </div>
  </div>
</div>