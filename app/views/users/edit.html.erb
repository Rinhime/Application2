<div class="main row justify-content-center">
  <div class="col-3 py-4">
  <h3>User info</h3>
  <% if @user.errors.any? %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @user do |f| %>
    <div class="edit-user-name">
      <label for="inputName">Name</label>
      <%= f.text_field :name, :size=>"60", autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div class="edit-profile-image">
      <label for="Image">Image</label>
      <%= f.file_field :profile_image, placeholder: "ファイルの選択", accept: "image/*" %>
    </div>
    <div class="edit-user-introduction">
      <label for="Introduction">Introduction</label>
      <%= f.text_area :introduction, :size=>"60" %>
    </div>  
    <%= f.submit "Update User" %>
  <% end %>

</div>