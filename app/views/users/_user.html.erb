
  
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <thead>
    　<tr>
      　<th>name</th>
      　<th><%= user.name %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
    
  </table>
  
  <div class="user-edit-link">
    <button type="button" class="btn btn-outline-secondary btn-block">
      <%= link_to edit_user_path(user.id), class: 'user-link text-secondary' do %>
          <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </button>
  </div>
