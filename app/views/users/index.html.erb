<div class="container">
  <div class="row my-5">
    <div class="sidebar col-2">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book_new: @book_new %>
    </div>
    <div class="col-7 offset-2">
      <h3>Users</h3>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr> 
          </thead>
          <% @users.each do |users| %>
            <tbody>
              <tr>
                <th><%= image_tag users.get_profile_image(100,100) %></th>
                <th><%= users.name %></th>
                <th><%= link_to "Show", user_path(users.id) %></th>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  
</div>
