<h1>Usersユーザー一覧</h1>
<p>image</p>
<p>name</p>

<% @users.each do |users| %>
  <div>
    <%= image_tag users.get_profile_image(100,100) %>
    <p>name：<%= users.name %></p>
    <%= link_to "Show", user_path(users.id) %>
  </div>
<% end %>

<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h5>name</h5>
  <h3><%= @user.name %></h3>
  <h5>introduction</h5>
  <h3><%= @user.introduction %></h3>
  <%= link_to "edit", edit_user_path(current_user) %>
</div>

<sidebar>
<h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</sidebar>