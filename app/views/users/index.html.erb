<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book_new: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Users</h3>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
            <tr>
              <td><%= image_tag users.get_profile_image(100,100) %></td>
              <td><%= users.name %></td>
              <td><%= link_to "Show", user_path(users.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
