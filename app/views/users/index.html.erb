<h1>Users</h1>
<div class="main row justify-content-center">
  <div class="sidebar col-2" style="background-color: orange;">
    <%= render 'users/user', user: @user %>
    <%= render 'books/book', book_new: @book_new %>
  </div>
    <div class="main-content col-5">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr> 
        </thead>
        <% @users.each do |users| %>
          <tbody>
            <tr>
              <th><%= image_tag users.get_profile_image(100,100) %></th>
              <th><%= users.name %></th>
              <th><%= link_to "Show", user_path(users.id) %></th>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  
</div>
